springframework.scheduling.quartz.SchedulerFactoryBean">		<property name="triggers">			<list>				<ref bean="cronRefreshSmsConfigTrigger"/>			</list>		</property>		<property name="taskExecutor" ref="executor" />	</bean>	<bean id="executor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">		<!--核心线程数 -->		<property name="corePoolSize" value="2" />		<!--最大线程数 -->		<property name="maxPoolSize" value="2" />		<!--队列最大长度 -->		<property name="queueCapacity" value="5000" />		<!-- 线程池维护线程所允许的空闲时间 -->		<property name="keepAliveSeconds" value="36000" />	</bean></beans>